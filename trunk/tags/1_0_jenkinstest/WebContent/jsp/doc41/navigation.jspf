
<style type="text/css">
.portlet-section-navi {
	display: block;
	border-top: 1px solid #009899;
	border-bottom: 1px solid #009899;
	margin-bottom: 5px;
	width: 100%;
}

.navigationColumn {
	width: 180px;
	display: none;
	color: #000000;
	background-color: #0032c1;
	border: 2px solid #009899;
	z-index: 1100;
	position: absolute;
	top: 95px;
}

.navigationCell {
	width: 100%;
	border: solid 0px;
	padding-left: 5px;
	text-align: center;
	background-color: ##0077FF;
}

.navigationCell a {
	color: #FFFFFF;
}

.navigationCell a:link {
	color: #FFFFFF;
}

.navigationCell a:hover {
	color: #000000;
	text-decoration: none;
	border_bottom: solid 1px;
	background-color: #FFFFFF;
}

.navigationCellEmpty {
	height: 1px;
	width: 100%;
}
</style>

<script type="text/javascript" language="javascript">
	var activId = 0;
	var activationTimer;
	var deactivationTimer;

	function stopActivation() {
		window.clearTimeout(activationTimer);
		deactivationTimer = window.setTimeout("switchoff()", 800);
	}

	function stopDeactivation() {
		window.clearTimeout(deactivationTimer);
	}

	function showActivNavi() {
		show(activId);
		if (activId.length > 1)
			show('navigationFooter');
	}

	function switchon(id) {
		stopDeactivation();

		if (activId.length > 1) {
			switchoff();
			activId = id;
			showActivNavi();
		} else {
			switchoff();
			activId = id;
			activationTimer = window.setTimeout("showActivNavi()", 250);
		}
	}

	function switchoff() {
		for ( var c = 0; c < 5; c++) {
			hide('navigationColumn' + c);
		}
		hide('navigationFooter');
		activId = 0;
	}

	setTimeout("JavaScript:switchoff();", 100);
</script>

<table cellpadding="4" cellspacing="0" class="portlet-section-navi">
	<thead onmouseover="style.cursor='pointer'; return false;"
		class="portlet-table-header"
		style="color: #ffffff; background-color: #0032c1">
		<tr>
			<th width=100px onclick="toggleVisibility('navigationColumn0')"
				onmouseover="style.backgroundColor='#0077FF';switchon('navigationColumn0');"
				onmouseout="style.backgroundColor='#0032c1'; stopActivation();"
				style="height: 16px;"><doc41:translate label="navMyProfile" />
			</th>

 			
			<th width=100px onclick="toggleVisibility('navigationColumn1')"
				onmouseover="style.backgroundColor='#0077FF';switchon('navigationColumn1');"
				onmouseout="style.backgroundColor='#0032c1'; stopActivation();"
				style="height: 16px"><doc41:translate label="navDocuments" />
			</th>
			
			<c:if test="${user.businessAdmin}">
				<th width=150px onclick="toggleVisibility('navigationColumn2')"
					onmouseover="style.backgroundColor='#0077FF';switchon('navigationColumn2');"
					onmouseout="style.backgroundColor='#0032c1'; stopActivation();"
					style="height: 16px"><doc41:translate label="navPermissions" />
				</th>
			</c:if>

			<c:if test="${user.businessAdmin || user.technicalAdmin}">
				<th width=150px onclick="toggleVisibility('navigationColumn3')"
					onmouseover="style.backgroundColor='#0077FF';switchon('navigationColumn3');"
					onmouseout="style.backgroundColor='#0032c1'; stopActivation();"
					style="height: 16px"><doc41:translate label="navMaintenance" />
				</th>
			</c:if>
		</tr>
	</thead>

	<tbody>
		<tr class="nobottom" style="font-weight: normal">
			<td>
				<table id="navigationColumn0" class="navigationColumn">
					<tr class="nobottom" style="font-weight: normal;">
						<td class="navigationCell" onmouseover="stopDeactivation();"
							onmouseout="stopActivation()";><a
							href="#" onclick="sendGet('userprofile/myprofile', '')"><doc41:translate label="navMyProfile" /></a></td>
					</tr>
					<tr>
						<td class="navigationCellEmpty" />
					</tr>
				</table>
			</td>
			
			<td>
				<table id="navigationColumn1" class="navigationColumn">
					<c:if test="${user.carrier}">
						<tr class="nobottom" style="font-weight: normal;">
							<td class="navigationCell" onmouseover="stopDeactivation();" onmouseout="stopActivation()";>
								<a href="#" onclick="sendGet('/documents/upload.htm;type=bol', 'reset=true')"><doc41:translate label="navBoL" /></a></td>
						</tr>
					</c:if>
					<tr>
						<td class="navigationCellEmpty" />
					</tr>
				</table>
			</td>
			


			<!-- navPermissions -->
			<c:if test="${user.businessAdmin}">
				<td>
					<table id="navigationColumn2" class="navigationColumn">
						<tr class="nobottom" style="font-weight: normal;">
							<td class="navigationCell" onmouseover="stopDeactivation();" onmouseout="stopActivation()";>
							<a href="#" onclick="sendGet('useradmin/userlist', '')"><doc41:translate label="navUserManagement" /></a></td>
						</tr>
						
						<tr>
							<td class="navigationCellEmpty" />
						</tr>
					</table>
				</td>
			</c:if>
			
			<!-- navMaintenance -->
			<c:if test="${user.businessAdmin || user.technicalAdmin}">
				<td>
					<table id="navigationColumn3" class="navigationColumn">
						<c:if test="${user.technicalAdmin}">
							<tr class="nobottom" style="font-weight: normal;">
								<td class="navigationCell" onmouseover="stopDeactivation();" onmouseout="stopActivation()";>
								<a href="<%=response.encodeURL(request.getContextPath() + "/SupportConsole")%>"><doc41:translate label="navSupportConsole" /></a></td>
							</tr>	
						</c:if>
						<c:if test="${user.businessAdmin}">
							<tr class="nobottom" style="font-weight: normal;">
								<td class="navigationCell" onmouseover="stopDeactivation();" onmouseout="stopActivation()";>
								<a href="#" onclick="sendGet('translations/translationOverview', '')"><doc41:translate label="navTranslations" /></a></td>
							</tr>
							<tr class="nobottom" style="font-weight: normal;">
								<td class="navigationCell" onmouseover="stopDeactivation();" onmouseout="stopActivation()";>
								<a href="#" onclick="sendGet('monitoring/monitoringOverview', '')"><doc41:translate label="navInterfaceMonitoring" /></a></td>
							</tr>
						</c:if>
						<tr>
							<td class="navigationCellEmpty" />
						</tr>
					</table>
				</td>
			</c:if></tr>
		
	</tbody>
</table>
